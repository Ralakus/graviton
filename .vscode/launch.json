    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'graviton'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=graviton",
                    "--package=graviton"
                ],
                "filter": {
                    "name": "graviton",
                    "kind": "bin"
                }
            },
            "args": [ "test/14.grav", "-d=3" ],
            "cwd": "${workspaceFolder}",
            "terminal": "integrated"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'graviton'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=graviton",
                    "--package=graviton"
                ],
                "filter": {
                    "name": "graviton",
                    "kind": "bin"
                }
            },
            "args": [ "repl" ],
            "cwd": "${workspaceFolder}",
            "terminal": "integrated"
        }
    ]
}